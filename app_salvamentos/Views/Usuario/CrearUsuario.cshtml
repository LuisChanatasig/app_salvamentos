@model app_salvamentos.Models.CrearUsuarioViewModel
@{
    ViewData["Title"] = "Crear Nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Asegúrate de que tu layout base esté enlazado
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="ri-user-add-line align-bottom me-1"></i> Crear Nuevo Usuario
                    </h4>
                </div><!-- end card header -->

                <div class="card-body">
                    @* Utiliza asp-action para enlazar con la acción POST del controlador *@
                    <form asp-action="CrearUsuarioM" asp-controller="Usuario" method="post" class="row g-3 needs-validation" novalidate>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PerfilId" class="form-label">
                                    <i class="ri-group-line align-bottom me-1"></i> @Html.DisplayNameFor(model => model.PerfilId)
                                </label>
                                @* Uso de asp-for y asp-items para el dropdown *@
                                <select asp-for="PerfilId" asp-items="Model.Perfiles" class="form-select" data-choices data-choices-sorting-false required>
                                    <option value="">-- Seleccione un perfil --</option>
                                </select>
                                @* Muestra errores de validación del lado del cliente/servidor *@
                                <span asp-validation-for="PerfilId" class="text-danger"></span>
                                <div class="invalid-feedback">Debe seleccionar un perfil.</div>
                            </div>
                        </div><!--end col-->

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UsuarioLogin" class="form-label">
                                    <i class="ri-user-line align-bottom me-1"></i> @Html.DisplayNameFor(model => model.UsuarioLogin)
                                </label>
                                <input asp-for="UsuarioLogin" class="form-control" placeholder="Ej. Fernando Chanatasig" required />
                                <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
                                <div class="invalid-feedback">Este campo es obligatorio.</div>
                            </div>
                        </div><!--end col-->

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UsuarioEmail" class="form-label">
                                    <i class="ri-mail-line align-bottom me-1"></i> Nickname o Email
                                </label>
                                <input asp-for="UsuarioEmail" type="text" class="form-control" placeholder="ejemplo@email.com" required />
                                <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
                                <div class="invalid-feedback">Ingrese un correo válido.</div>
                            </div>
                        </div><!--end col-->

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">
                                    <i class="ri-lock-line align-bottom me-1"></i> @Html.DisplayNameFor(model => model.Password)
                                </label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese contraseña" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <div class="invalid-feedback">Este campo es obligatorio.</div>
                            </div>
                        </div><!--end col-->

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">
                                    <i class="ri-lock-unlock-line align-bottom me-1"></i> @Html.DisplayNameFor(model => model.ConfirmPassword)
                                </label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirme contraseña" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                <div class="invalid-feedback">Este campo es obligatorio.</div>
                            </div>
                        </div><!--end col-->

                        <div class="col-12 text-end mt-4">
                            <button type="submit" class="btn btn-primary waves-effect waves-light">
                                <i class="ri-check-line align-bottom me-1"></i> Crear Usuario
                            </button>
                        </div>
                    </form>
                </div><!-- end card-body -->
            </div><!-- end card -->
        </div><!-- end col -->
    </div><!-- end row -->
</div><!-- end container-fluid -->
@section Scripts {
    <script>
        $(document).ready(function () {
            // Script para mostrar SweetAlert
            var errorMessage = '@Html.Raw(TempData["ErrorMessage"])';
            var successMessage = '@Html.Raw(TempData["SuccessMessage"])';

            if (errorMessage) {
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                    text: errorMessage,
                    confirmButtonText: 'Aceptar'
                });
            } else if (successMessage) {
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: successMessage,
                    confirmButtonText: 'Ok'
                });
            }

            // Script para la validación de Bootstrap 5 (si usas la validación del lado del cliente de Bootstrap)
            // Asegúrate de que este script se ejecute DESPUÉS de que el DOM esté completamente cargado.
            // El $(document).ready() de jQuery ya lo asegura.
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
        });
    </script>
    @{
    }
}
