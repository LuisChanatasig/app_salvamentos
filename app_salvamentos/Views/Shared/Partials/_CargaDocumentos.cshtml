@* Views/Shared/Partials/_DocumentosYRespaldo.cshtml *@
<h6 class="text-uppercase text-muted mb-3">Documentos y Respaldo de Daños</h6>
<div class="row g-2">
    <div class="col-md-6">
        <label class="form-label fw-semibold">Matrícula (Anverso)</label>
        <input name="MatriculaAnverso" type="file" accept="image/*" class="form-control form-control-sm" />
    </div>
    <div class="col-md-6">
        <label class="form-label fw-semibold">Matrícula (Reverso)</label>
        <input name="MatriculaReverso" type="file" accept="image/*" class="form-control form-control-sm" />
    </div>
    <div class="col-md-6 col-lg-4">
        <label class="form-label fw-semibold">Multas</label>
        <input name="Multas" type="file" class="form-control form-control-sm" />
    </div>
    <div class="col-md-6 col-lg-4">
        <label class="form-label fw-semibold">Radio</label>
        <input name="Radio" type="file" class="form-control form-control-sm" />
    </div>
    <div class="col-md-12 col-lg-4">
        <label class="form-label fw-semibold">Fotos del siniestro</label>
        <input name="FotosSiniestro" type="file" multiple class="form-control form-control-sm" />
    </div>

    <div class="col-12">
        <label class="form-label fw-semibold mt-3">Observaciones de Daños</label>
        <textarea name="ObservacionesDanos" rows="3" class="form-control form-control-sm"></textarea>
    </div>
    <div class="col-12">
        <label class="form-label fw-semibold">Fotos de Respaldo</label>
        <input name="FotosRespaldoDanos" type="file" multiple class="form-control form-control-sm" />
    </div>
</div>
