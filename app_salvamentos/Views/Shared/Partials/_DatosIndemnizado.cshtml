@* Shared/_Partials/_DatosIndemnizado.cshtml *@
<h5 class="text-uppercase text-muted mb-3">Datos del Indemnizado</h5>
<div class="row g-2">

    <div class="col-md-4">
        <div class="mb-2">
            <label for="identificacionIndemnizado" class="form-label fw-semibold">Identificación</label>
            <input id="identificacionIndemnizado" name="IdentificacionIndemnizado" type="text" class="form-control form-control-sm" />
        </div>
    </div>

    <div class="col-md-4">
        <div class="mb-2">
            <label for="nombreIndemnizado" class="form-label fw-semibold">Nombre completo</label>
            <input id="nombreIndemnizado" name="NombreIndemnizado" type="text" class="form-control form-control-sm" />
        </div>
    </div>

    <div class="col-md-4">
        <div class="mb-2">
            <label for="telefonoIndemnizado" class="form-label fw-semibold">Teléfono</label>
            <input id="telefonoIndemnizado" name="TelefonoIndemnizado" type="tel" class="form-control form-control-sm" />
        </div>
    </div>

    <div class="col-md-4">
        <div class="mb-2">
            <label for="emailIndemnizado" class="form-label fw-semibold">Correo electrónico</label>
            <input id="emailIndemnizado" name="EmailIndemnizado" type="email" class="form-control form-control-sm" />
        </div>
    </div>

</div>
