@* Views/Analisis/_InfoVehiculo.cshtml *@
<h6 class="text-uppercase text-muted mb-3">Información del Vehículo</h6>
<div class="row g-2">
    <div class="col-md-3">
        <label class="form-label fw-semibold">Placa</label>
        <input name="Placa" class="form-control form-control-sm" />
    </div>
    <div class="col-md-3">
        <label class="form-label fw-semibold">Marca</label>
        <input name="Marca" class="form-control form-control-sm" />
    </div>
    <div class="col-md-3">
        <label class="form-label fw-semibold">Modelo</label>
        <input name="Modelo" class="form-control form-control-sm" />
    </div>
    <div class="col-md-3">
        <label class="form-label fw-semibold">Año</label>
        <input name="Ano" type="number" class="form-control form-control-sm" />
    </div>
    <div class="col-md-4">
        <label class="form-label fw-semibold">Color</label>
        <input name="Color" class="form-control form-control-sm" />
    </div>
    <div class="col-md-4">
        <label class="form-label fw-semibold">VIN</label>
        <input name="VIN" class="form-control form-control-sm" />
    </div>
    <div class="col-md-4">
        <label class="form-label fw-semibold">Tipo de vehículo</label>
        <input name="TipoVehiculo" class="form-control form-control-sm" />
    </div>
</div>
